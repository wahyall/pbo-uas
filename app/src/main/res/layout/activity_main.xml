<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFormulaOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Formula One Race"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnRallyCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Rally Car Race"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnFormulaOne"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnLeMansCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Le Mans Race"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnFormulaOne"
        android:layout_marginTop="100dp"/>

</RelativeLayout>
